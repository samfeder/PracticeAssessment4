<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= error %><br>
  <% end %>
<% end %>

<h1>New Link</h1>

<form action="<%= links_url %>" method="post">

<label>
  Title:
<input type="text"
       name="link[title]"
       value="">
</label>
<br>
<label>
   URL:
  <input type="text"
         name="link[url]"
         value="">
</label>
<br>
<input type="submit" value="Create New Link">
</form>
