<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= error %><br>
  <% end %>
<% end %>

<h1>Sign In</h1>
<form action="<%= session_url %>" method="post">

<label>
  Username:
  <input type="text"
         name="user[username]"
         value="">
</label>

<br>

<label>
  Password:
  <input type="password"
         name="user[password]"
         value="">
</label>
<br>
<button>Sign In</button>
</form>
<br>
Not a user? <a href="<%= new_user_url %>">sign up</a>